<Window x:Class="MotorsApp.EditDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Driver" Height="200" Width="326">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Driver Name:" Grid.Row="0" Margin="10,10,10,10" Grid.ColumnSpan="2"/>
        <TextBox x:Name="driverTxt" Grid.Row="0" Margin="61,10,10,10" Grid.Column="1"/>
        <Label Content="License No:" Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="2"/>
        <TextBox x:Name="licenseTxt" Grid.Row="1" Margin="61,10,10,10" Grid.Column="1"/>
        <Button Content="Update" Grid.Row="2" Margin="10,10,10,10" Click="UpdateButton_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
